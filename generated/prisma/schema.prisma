generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Word {
  id           String    @id @default(cuid())
  word         String
  phonetic     String
  roots        String? // 词根
  affixes      String? // 词缀
  etymology    String? // 词源解释
  definitionEn String
  definitionZh String
  example      String
  lastReviewed DateTime?
  nextReview   DateTime?
  reviewCount  Int       @default(0)
  known        Boolean   @default(false)
}
